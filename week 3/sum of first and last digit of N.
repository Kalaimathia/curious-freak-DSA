#include <iostream>
using namespace std;

int main() {
    int n;
    cout << "Enter a number: ";
    cin >> n;
    
    int lastDigit = n % 10;
    while (n >= 10) {
        n /= 10;
    }
    int firstDigit = n;
    
    cout << "Sum of first and last digit: " << (firstDigit + lastDigit) << endl;
    
    return 0;
}
